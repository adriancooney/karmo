{
	"name": "Karmo",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Karmo - Gamble your reddit karma away",
	"content_scripts": [
		{
			"matches": [
				"http://reddit.com/*",
				"https://reddit.com/*",
				"http://*.reddit.com/*",
				"https://*.reddit.com/*"
			],

			"js": [
				"lib/mustache.js",
				"karmo.js"
			],

			"css": [
				"lib/karmo.css"
			]
		}
	],
	"icons": {
		"48": "icon48.png",
		"128": "icon128.png" 
	},
	"permissions": [
	    "cookies",
		"tabs",
		"storage",
		"http://reddit.com/*",
		"https://reddit.com/*",
		"http://*.reddit.com/*",
		"https://*.reddit.com/*"
	],

	"web_accessible_resources": [
		"templates/small-bet-view.template",
		"templates/large-bet-view.template",
		"templates/main-bet-view.template",
		"templates/dashboard.template"
	 ]
}